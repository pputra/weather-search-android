<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimaryDark"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TodayFragment">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:columnOrderPreserved="false"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.429">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_width="109dp"
            android:layout_height="154dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/colorSecondaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:scaleType="center"
                    app:materialIcon="weather_windy"
                    app:materialIconColor="@color/darkPurple"
                    app:materialIconSize="70dp" />

                <TextView
                    android:id="@+id/tv_today_windspeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.34 mph"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wind Speed"
                    android:textColor="@color/lightGrey"
                    android:textSize="17sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_width="109dp"
            android:layout_height="154dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/colorSecondaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:scaleType="center"
                    app:materialIcon="gauge"
                    app:materialIconColor="@color/darkPurple"
                    app:materialIconSize="70dp" />

                <TextView
                    android:id="@+id/tv_today_pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1015.80 mb"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pressure"
                    android:textColor="@color/lightGrey"
                    android:textSize="17sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_width="109dp"
            android:layout_height="154dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/colorSecondaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:scaleType="center"
                    app:materialIcon="weather_pouring"
                    app:materialIconColor="@color/darkPurple"
                    app:materialIconSize="70dp" />

                <TextView
                    android:id="@+id/tv_today_precipitation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00 mmph"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precipitation"
                    android:textColor="@color/lightGrey"
                    android:textSize="17sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_width="109dp"
            android:layout_height="154dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/colorSecondaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:scaleType="center"
                    app:materialIcon="thermometer"
                    app:materialIconColor="@color/darkPurple"
                    app:materialIconSize="70dp" />

                <TextView
                    android:id="@+id/tv_today_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="59 F"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:textColor="@color/lightGrey"
                    android:textSize="17sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_width="109dp"
            android:layout_height="154dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/colorSecondaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ic_today_summary"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/tv_today_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear Night"
                    android:textColor="@color/lightGrey"
                    android:textSize="17sp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_width="109dp"
            android:layout_height="154dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/colorSecondaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:scaleType="center"
                    app:materialIcon="water_percent"
                    app:materialIconColor="@color/darkPurple"
                    app:materialIconSize="70dp" />

                <TextView
                    android:id="@+id/tv_today_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="76%"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:textColor="@color/lightGrey"
                    android:textSize="17sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_width="109dp"
            android:layout_height="154dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/colorSecondaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:scaleType="center"
                    app:materialIcon="eye_outline"
                    app:materialIconColor="@color/darkPurple"
                    app:materialIconSize="70dp" />

                <TextView
                    android:id="@+id/tv_today_visibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.00 km"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visibility"
                    android:textColor="@color/lightGrey"
                    android:textSize="17sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_width="109dp"
            android:layout_height="154dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/colorSecondaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:scaleType="center"
                    app:materialIcon="weather_fog"
                    app:materialIconColor="@color/darkPurple"
                    app:materialIconSize="70dp" />

                <TextView
                    android:id="@+id/tv_today_cloud_cover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cloud Cover"
                    android:textColor="@color/lightGrey"
                    android:textSize="17sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_width="109dp"
            android:layout_height="154dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/colorSecondaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:scaleType="center"
                    app:materialIcon="earth"
                    app:materialIconColor="@color/darkPurple"
                    app:materialIconSize="70dp" />

                <TextView
                    android:id="@+id/tv_today_ozone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="291.80 DU"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ozone"
                    android:textColor="@color/lightGrey"
                    android:textSize="17sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>



    </GridLayout>

</android.support.constraint.ConstraintLayout>